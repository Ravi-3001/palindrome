#include<stdio.h>
int main()
{
    int a,n,rem,s=0;
    printf("enter a number:");
    scanf("%d",&a);
    n=a;
    while(n!=0)
    {
        rem=n%10;
        s=s*10+rem;
        n=n/10;
        
    }
    if(a==s)
    printf("it is a palindrome",a);
    else
    printf("it is not a palindrome",a);
   return(0);
    
}
